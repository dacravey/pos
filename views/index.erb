<h1>Welcome to the D&B Emporium</h1>

<form action="/products" method="post">
  <label for="name">Product Name</label>
  <input type="text" name="name">
  <label for="price">Price</label>
  <input type="text" name="price">

  <button type="submit">Add to inventory!</button>

</form>

<% if @products.any?() %>
  <% @products.each() do |product| %>
    <ul>
      <form action="/purchase/<%= @purchase.id() %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <li> <input type="checkbox" name="bought_items[]"value="<%= product.id() %>">
          <%= product.name() %> $<%= product.price() %>
          <a href="/product_edit/<%= product.id() %>">Edit or delete item</a></li>
        <button type="submit">Purchase!</button>
      </form>
    </ul>
  <% end %>
  <% else %>
    <p>Oh no! You have no inventory!</p>
<% end %>
